                <i class="fas fa-plus me-1"></i>Nuevo Horario
            </a>
        </div>

        <!-- Alertas -->
        <div th:if="${success}" class="alert alert-success alert-dismissible fade show" role="alert">
            <span th:text="${success}"></span>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <div th:if="${error}" class="alert alert-danger alert-dismissible fade show" role="alert">
            <span th:text="${error}"></span>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>

        <!-- Información del Curso (si se está filtrando por curso) -->
        <div th:if="${curso != null}" class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="fas fa-book me-1"></i>
                    Horarios del Curso: <span th:text="${curso.nombre}"></span>
                </h5>
            </div>
        </div>

        <!-- Tabla de Horarios -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-list me-1"></i>
                    Lista de Horarios
                    <span th:if="${curso != null}" class="badge bg-light text-dark ms-2">
                        Curso: <span th:text="${curso.nombre}"></span>
                    </span>
                </h5>
            </div>
            <div class="card-body">
                <div th:if="${horarios.empty}" class="text-center py-4">
                    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No se encontraron horarios</h5>
                    <p th:if="${curso != null}" class="text-muted">
                        No hay horarios registrados para este curso
                    </p>
                    <a th:href="@{/horarios/nuevo}" class="btn btn-primary mt-2">
                        <i class="fas fa-plus me-1"></i>Crear Primer Horario
                    </a>
                </div>

                <div th:unless="${horarios.empty}" class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Curso</th>
                                <th>Día</th>
                                <th>Hora Inicio</th>
                                <th>Hora Fin</th>
                                <th>Aula</th>
                                <th>Cupos Disp.</th>
                                <th>Activo</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr th:each="horario : ${horarios}">
                                <td th:text="${horario.idHorario}"></td>
                                <td>
                                    <strong th:text="${horario.curso.nombre}"></strong>
                                    <br>
                                    <small class="text-muted">
                                        ID: <span th:text="${horario.curso.idCurso}"></span>
                                    </small>
                                </td>
                                <td>
                                    <span class="badge bg-primary" th:text="${horario.diaSemana}"></span>
                                </td>
                                <td>
                                    <span class="badge bg-success" th:text="${#temporals.format(horario.horaInicio, 'HH:mm')}"></span>
                                </td>
                                <td>
                                    <span class="badge bg-danger" th:text="${#temporals.format(horario.horaFin, 'HH:mm')}"></span>
                                </td>
                                <td th:text="${horario.aula} ?: 'Sin asignar'"></td>
                                <td th:text="${horario.cuposDisponibles} ?: '0'"></td>
                                <td>
                                    <span th:if="${horario.activo}" class="badge bg-success">
                                        <i class="fas fa-check"></i> Sí
                                    </span>
                                    <span th:unless="${horario.activo}" class="badge bg-danger">
                                        <i class="fas fa-times"></i> No
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a th:href="@{/horarios/curso/{id}(id=${horario.curso.idCurso})}" 
                                           class="btn btn-info" title="Ver horarios del curso">
                                            <i class="fas fa-list"></i>
                                        </a>
                                        <form th:action="@{/horarios/eliminar/{id}(id=${horario.idHorario})}" 
                                              method="post" class="d-inline"
                                              th:onsubmit="return confirm('¿Está seguro de eliminar este horario?');">
                                            <button type="submit" class="btn btn-danger" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Navegación -->
        <div class="mt-4">
            <a th:href="@{/cursos}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Volver a Cursos
