<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title th:text="${modo == 'nuevo'} ? 'Nuevo Curso' : 'Editar Curso'">Formulario Curso</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="fas" th:classappend="${modo == 'nuevo'} ? 'fa-plus-circle' : 'fa-edit'"></i>
                <span th:text="${modo == 'nuevo'} ? 'Nuevo Curso' : 'Editar Curso'"></span>
            </h1>
            <a th:href="@{/cursos}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Volver a la lista
            </a>
        </div>

        <!-- Alertas -->
        <div th:if="${success}" class="alert alert-success alert-dismissible fade show" role="alert">
            <span th:text="${success}"></span>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <div th:if="${error}" class="alert alert-danger alert-dismissible fade show" role="alert">
            <span th:text="${error}"></span>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>

        <!-- Formulario -->
        <div class="card">
            <div class="card-header" th:classappend="${modo == 'nuevo'} ? 'bg-success text-white' : 'bg-warning'">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-1"></i>
                    Información del Curso
                </h5>
            </div>
            <div class="card-body">
                <form th:action="${modo == 'nuevo'} ? @{/cursos/guardar} : @{/cursos/actualizar/{id}(id=${curso.idCurso})}" 
                      method="post" th:object="${curso}">
                    
                    <!-- Campos ocultos para modo edición -->
                    <input type="hidden" th:if="${modo == 'editar'}" th:field="*{idCurso}">
                    <input type="hidden" th:field="*{fechaCreacion}">
                    
                    <div class="row">
                        <!-- Nombre -->
                        <div class="col-md-6 mb-3">
                            <label for="nombre" class="form-label">Nombre del Curso *</label>
                            <input type="text" class="form-control" id="nombre" th:field="*{nombre}" 
                                   required maxlength="100" placeholder="Ingrese el nombre del curso">
                            <div class="form-text">Máximo 100 caracteres</div>
                        </div>

                        <!-- Duración -->
                        <div class="col-md-6 mb-3">
                            <label for="duracionHoras" class="form-label">Duración (horas)</label>
                            <input type="number" class="form-control" id="duracionHoras" th:field="*{duracionHoras}"
                                   min="1" max="1000" placeholder="Ej: 40">
                        </div>
                    </div>

                    <!-- Descripción -->
                    <div class="mb-3">
                        <label for="descripcion" class="form-label">Descripción</label>
                        <textarea class="form-control" id="descripcion" th:field="*{descripcion}" 
                                  rows="3" maxlength="500" placeholder="Descripción detallada del curso..."></textarea>
                        <div class="form-text">Máximo 500 caracteres</div>
                    </div>

                    <div class="row">
                        <!-- Precio -->
                        <div class="col-md-4 mb-3">
                            <label for="precio" class="form-label">Precio ($)</label>
                            <input type="number" class="form-control" id="precio" th:field="*{precio}"
                                   step="0.01" min="0" placeholder="0.00">
                            <div class="form-text">0.00 para cursos gratuitos</div>
                        </div>

                        <!-- Cupo Máximo -->
                        <div class="col-md-4 mb-3">
                            <label for="cupoMaximo" class="form-label">Cupo Máximo</label>
                            <input type="number" class="form-control" id="cupoMaximo" th:field="*{cupoMaximo}"
                                   min="1" max="1000" placeholder="20">
                        </div>

                        <!-- Estado -->
                        <div class="col-md-4 mb-3">
                            <label for="estado" class="form-label">Estado *</label>
                            <select class="form-select" id="estado" th:field="*{estado}" required>
                                <option value="">Seleccione un estado</option>
                                <option th:each="estado : ${estados}" 
                                        th:value="${estado.idEstado}"
                                        th:text="${estado.nombre}"
                                        th:selected="${curso.estado != null and curso.estado.idEstado == estado.idEstado}">
                                </option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Fecha Inicio -->
                        <div class="col-md-4 mb-3">
                            <label for="fechaInicio" class="form-label">Fecha de Inicio</label>
                            <input type="date" class="form-control" id="fechaInicio" th:field="*{fechaInicio}">
                        </div>

                        <!-- Fecha Fin -->
                        <div class="col-md-4 mb-3">
                            <label for="fechaFin" class="form-label">Fecha de Fin</label>
                            <input type="date" class="form-control" id="fechaFin" th:field="*{fechaFin}">
                        </div>

                        <!-- Activo -->
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Estado Activo</label>
                            <div class="form-check form-switch mt-2">
                                <input class="form-check-input" type="checkbox" role="switch" 
                                       id="activo" th:checked="*{activo} ?: true">
                                <label class="form-check-label" for="activo">
                                    <span th:text="*{activo} ? 'Activo' : 'Inactivo'"></span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Botones -->
                    <div class="d-flex justify-content-between mt-4">
                        <a th:href="@{/cursos}" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i>Cancelar
                        </a>
                        <button type="submit" class="btn" 
                                th:classappend="${modo == 'nuevo'} ? 'btn-success' : 'btn-warning'">
                            <i class="fas" th:classappend="${modo == 'nuevo'} ? 'fa-save' : 'fa-edit'"></i>
                            <span th:text="${modo == 'nuevo'} ? 'Crear Curso' : 'Actualizar Curso'"></span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Script para manejar el switch de activo
        document.getElementById('activo').addEventListener('change', function() {
            document.getElementById('activo').value = this.checked;
        });
    </script>
</body>
</html>