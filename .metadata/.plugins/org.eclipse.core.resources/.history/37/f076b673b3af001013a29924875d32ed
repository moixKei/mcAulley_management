        </select>
        <div class="form-text">Seleccione el curso para este horario</div>
    </div>

    <!-- Día de la Semana - CORREGIDO -->
    <div class="col-md-6 mb-3">
        <label for="diaSemana" class="form-label">Día de la Semana *</label>
        <select class="form-select" id="diaSemana" name="diaSemana" required>
            <option value="">Seleccione un día</option>
            <option th:each="dia : ${diasSemana}" 
                    th:value="${dia}"
                    th:text="${dia}"
                    th:selected="${horario.diaSemana == dia}">
            </option>
