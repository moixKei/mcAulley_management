package com.mcaulley.app.repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import com.mcaulley.app.entity.Alumna;

public interface AlumnaRepository extends JpaRepository<Alumna, Long> {

    @Query(value = "SELECT * FROM tb_alumnas WHERE nombre = :nombre LIMIT 1", nativeQuery = true)
    Alumna findByNombre(@Param("nombre") String nombre);
}
