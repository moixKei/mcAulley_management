spring.application.name=Proyecto_vs1
server.port=8092

# Datasource
spring.datasource.url=jdbc:mysql://localhost:3306/mcaulley2025
spring.datasource.username=root
spring.datasource.password=

# JPA Configuration - IMPORTANTE para evitar conflictos
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.generate-ddl=false
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# Dialect correcto
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect

# Opcional: para desarrollo si necesitas que Hibernate no valide estrictamente
# spring.jpa.hibernate.ddl-auto=none